<!-- GuessGameLists -->
<div class="sub-template container">

    <div class="center-outer">
        <div class="center-inner">

            <!-- item 1 -->
            <div class="item item1 leftern">
                {{#if item1.picture}}
                    <div class="image image-container" style="background-image: url( {{item1.picture.url}} );">
                        <img src="{{item1.picture.url}}"/>

                        <p class="title">{{item1.picture.caption}}</p>
                    </div>
                {{/if}}

                {{#if item1.status}}
                    <div class="status status-container">
                        <p class="message">{{item1.status.caption}}</p>

                        <p class="date">{{item1.status.date}}</p>
                        <ul class="shadow">
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                        </ul>
                    </div>
                {{/if}}
            </div>

            <!-- item 2 -->
            <div class="item item2 rightern">
                {{#if item2.picture}}
                    <div class="image image-container" style="background-image: url( {{item2.picture.url}} );">
                        <img src="{{item2.picture.url}}"/>

                        <p class="title">{{item2.picture.caption}}</p>
                    </div>
                {{/if}}

                {{#if item2.status}}
                    <div class="status status-container">
                        <p class="message">{{item2.status.caption}}</p>

                        <p class="date">{{item2.status.date}}</p>
                        <ul class="shadow">
                            <li></li>
                            <li></li>
                            <li></li>
                            <li></li>
                        </ul>
                    </div>
                {{/if}}
            </div>

        </div>

    </div>
</div>